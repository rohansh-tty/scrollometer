{
  "name": "scrollometer",
  "description": "Measure your scroll",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "js": ["supabase.js", "content-script.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["tabs", "storage", "cookies"],
  "host_permissions": [
    "https://scrollometerui.vercel.app/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
